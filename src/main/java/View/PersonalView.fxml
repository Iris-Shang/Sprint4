<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.PersonController">
   <content>
      <AnchorPane prefHeight="425.0" prefWidth="327.0">
      
      
      
      
         <VBox alignment="CENTER" prefHeight="281.0" prefWidth="327.0" spacing="10">
      
             <Label text="User Profile" />
      
             <!-- Display user information -->
      
             <HBox spacing="10">
      
                 <Label id="Namefield" text="Name:" />
      
                 <Label id="nameLabel" fx:id="nameLabel" />
      
             </HBox>
      
             <HBox prefHeight="17.0" prefWidth="127.0" spacing="10">
      
                 <Label text="Company:" />
      
                 <Label id="companyLabel" fx:id="companyLabel" />
      
             </HBox>
            <HBox prefHeight="17.0" prefWidth="127.0" spacing="10">
               <children>
                  <Label text="Occupatation:" />
                  <Label id="occupatationlabel" fx:id="occupatationlabel" />
               </children>
            </HBox>
            <HBox prefHeight="50.0" prefWidth="127.0" spacing="10">
               <children>
                  <Label text="Projects:" />
                  <ListView id="projectlist" fx:id="projectlist" maxHeight="1.7976931348623157E308" prefHeight="100.0" prefWidth="200.0" />
               </children>
            </HBox>
            <HBox prefHeight="50.0" prefWidth="127.0" spacing="10">
               <children>
                  <Label text="Job applying:" />
                  <ListView id="joblist" fx:id="joblist" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </HBox>
      
             <HBox spacing="10">
      
                 <Label text="Skills:" />
               <ListView id="skillslist" fx:id="skillslist" prefHeight="50.0" prefWidth="254.0" />
      
             </HBox>
            <HBox spacing="10" />
      
         </VBox>
      
          <Button id="Editbutton" fx:id="Editbutton" layoutX="126.0" layoutY="385.0" onAction="#handleEditProfileButtonAction" text="Edit Profile" />
         <ListView id="ADList" fx:id="ADList" layoutX="25.0" layoutY="307.0" prefHeight="50.0" prefWidth="254.0" />
      
      </AnchorPane>
   </content>
</ScrollPane>
