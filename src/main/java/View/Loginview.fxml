<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LoginController">




   <VBox alignment="CENTER" spacing="10">

       <Label text="Login" />

       <TextField id="useridarea" fx:id="useridarea" onMousePressed="#clickonuseridarea" promptText="User ID" />

       <PasswordField id="userpasswordarea" fx:id="userpasswordarea" onMousePressed="#clickonuserpasswordarea" promptText="Password" />

       <Button id="loginbutton" fx:id="loginbutton" onAction="#handleLoginButtonAction" text="Login" />

   </VBox>

</AnchorPane>
